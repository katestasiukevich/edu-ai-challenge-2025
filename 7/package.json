{
  "name": "sea-battle-game",
  "version": "1.0.0",
  "description": "Modern ES6+ implementation of the classic Sea Battle (Battleship) game",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": ["battleship", "sea-battle", "game", "cli"],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ]
  }
} 